<script>
/* ============================================ */
/* VIDEO LOADING & QUALITY DETECTION            */
/* ============================================ */
document.addEventListener('DOMContentLoaded', function() {
    // YOUR BUNNY CDN VIDEO URLs with 4 resolutions
    const videoSources = {
        mobile: 'https://solar-hero-cdn.b-cdn.net/hero-720p.mp4',
        desktop: 'https://solar-hero-cdn.b-cdn.net/hero-1080p.mp4',
        high: 'https://solar-hero-cdn.b-cdn.net/hero-2K.mp4',
        premium: 'https://solar-hero-cdn.b-cdn.net/hero-4k.mp4'
    };
    
    // Add class to body for styling
    document.body.classList.add('tesla-hero-active');
    
    // Detect optimal video quality
    function getOptimalVideoQuality() {
        const width = window.innerWidth;
        const connection = navigator.connection || navigator.mozConnection || navigator.webkitConnection;
        
        if (connection && connection.effectiveType) {
            if (connection.effectiveType === 'slow-2g' || connection.effectiveType === '2g') {
                return 'mobile';
            }
            if (connection.effectiveType === '3g' || width <= 768) {
                return 'mobile';
            }
            if (connection.effectiveType === '4g') {
                if (width > 2560) return 'premium';
                if (width > 1920) return 'high';
                if (width > 1280) return 'desktop';
                return 'mobile';
            }
        }
        
        // Fallback to screen size
        if (width <= 768) return 'mobile';
        if (width <= 1920) return 'desktop';
        if (width <= 2560) return 'high';
        return 'premium';
    }
    
    // Load video
    function loadDynamicVideo() {
        const video = document.getElementById('heroVideo');
        const quality = getOptimalVideoQuality();
        const videoUrl = videoSources[quality];
        
        console.log('Loading video quality:', quality);
        
        const source = document.createElement('source');
        source.src = videoUrl;
        source.type = 'video/mp4';
        video.appendChild(source);
        
        video.load();
        
        video.addEventListener('loadeddata', function() {
            console.log('Video loaded successfully');
            video.play().catch(function(error) {
                console.log('Autoplay prevented:', error);
            });
        });
    }
    
    // Initialize
    setTimeout(loadDynamicVideo, 100);
    
    // Handle scroll to show/hide based on position
    let lastScrollTop = 0;
    window.addEventListener('scroll', function() {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const heroHeight = window.innerHeight;
        
        // Optional: Add parallax effect
        const hero = document.querySelector('.tesla-hero-container');
        if (hero && scrollTop < heroHeight) {
            hero.style.transform = `translateY(${scrollTop * 0.5}px)`;
        }
    });
});
</script>

