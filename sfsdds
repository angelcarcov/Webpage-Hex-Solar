<script>
/* ============================================ */
/* COUNTUP ANIMATION SCRIPT                     */
/* ============================================ */
(function() {
    let hasAnimated = false;
    
    // Main animation function with easing
    function animateValue(element, start, end, duration, callback) {
        let startTimestamp = null;
        const step = (timestamp) => {
            if (!startTimestamp) startTimestamp = timestamp;
            const progress = Math.min((timestamp - startTimestamp) / duration, 1);
            
            // Smooth easing function
            const easeOutCubic = 1 - Math.pow(1 - progress, 3);
            const current = Math.floor(easeOutCubic * (end - start) + start);
            
            // Format with comma separator
            element.textContent = '$' + current.toLocaleString();
            
            if (progress < 1) {
                window.requestAnimationFrame(step);
            } else {
                if (callback) callback();
            }
        };
        window.requestAnimationFrame(step);
    }
    
    // Start the animation sequence
    function startAnimation() {
        if (hasAnimated) return;
        hasAnimated = true;
        
        const number = document.getElementById('animated-number');
        const subtitle = document.getElementById('subtitle');
        const button = document.getElementById('cta-button');
        
        if (!number) return;
        
        // CUSTOMIZABLE PARAMETERS
        const startValue = 3850;        // Starting number
        const endValue = 60;           // Ending number
        const animationDuration = 2000; // 2 seconds
        const subtitleDelay = 100;      // Delay before subtitle
        const buttonDelay = 300;        // Delay before button
        
        // Start countdown
        animateValue(number, startValue, endValue, animationDuration, function() {
            // Show subtitle
            setTimeout(function() {
                if (subtitle) subtitle.classList.add('show');
                
                // Show button
                setTimeout(function() {
                    if (button) button.classList.add('show');
                }, buttonDelay);
            }, subtitleDelay);
        });
    }
    
    // Set up Intersection Observer
    function setupScrollTrigger() {
        const section = document.getElementById('recibo-section');
        if (!section) {
            setTimeout(setupScrollTrigger, 500);
            return;
        }
        
        const observerOptions = {
            threshold: 0.3,     // Trigger when 30% visible
            rootMargin: '0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && !hasAnimated) {
                    startAnimation();
                }
            });
        }, observerOptions);
        
        observer.observe(section);
    }
    
    // Initialize
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', setupScrollTrigger);
    } else {
        setTimeout(setupScrollTrigger, 500);
    }
})();
</script>

